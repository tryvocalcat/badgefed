@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Web
@using BadgeFed.Components
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject CurrentUser CurrentUser

@rendermode InteractiveServer

<nav class="navbar is-dark is-spaced admin-nav">
    <div class="container">
        <div class="navbar-brand">
            <a class="navbar-item navbar-logo" href="/admin">
                <Logo />
            </a>
            <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navMenu" 
                @onclick="ToggleMenu">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>
        
        <div id="navMenu" class="navbar-menu @(isMenuActive ? "is-active" : "")">            
            <div class="navbar-start">
                @if (CurrentUser.CanManage())
                {
                    <div class="navbar-item has-dropdown is-hoverable">
                        <a class="navbar-link">
                            <span class="icon">
                                <i class="fas fa-users"></i>
                            </span>
                            <span>Issuers</span>
                        </a>
                        <div class="navbar-dropdown">
                            <a class="navbar-item" href="/admin/actors/">
                                <span class="icon">
                                    <i class="fas fa-list"></i>
                                </span>
                                <span>All Issuers</span>
                            </a>
                            <a class="navbar-item" href="/admin/actors/create">
                                <span class="icon">
                                    <i class="fas fa-plus"></i>
                                </span>
                                <span>Create Issuer</span>
                            </a>
                        </div>
                    </div>
               
                    <div class="navbar-item has-dropdown is-hoverable">
                        <a class="navbar-link">
                            <span class="icon">
                                <i class="fas fa-award"></i>
                            </span>
                            <span>Badges</span>
                        </a>
                        <div class="navbar-dropdown">
                            <a class="navbar-item" href="/admin/badges/">
                                <span class="icon">
                                    <i class="fas fa-list"></i>
                                </span>
                                <span>All Badges</span>
                            </a>
                            <a class="navbar-item" href="/admin/badges/create">
                                <span class="icon">
                                    <i class="fas fa-plus"></i>
                                </span>
                                <span>Create Badge</span>
                            </a>
                            <a class="navbar-item" href="/explore">
                                <span class="icon">
                                    <i class="fas fa-compass"></i>
                                </span>
                                <span>Explore Badges</span>
                            </a>
                        </div>
                    </div>

                }

                @if (CurrentUser.CanCollaborate())
                {
                    <div class="navbar-item has-dropdown is-hoverable">
                        <a class="navbar-link">
                            <span class="icon">
                                <i class="fas fa-gift"></i>
                            </span>
                            <span>Grants</span>
                        </a>
                        <div class="navbar-dropdown">
                            <a class="navbar-item" href="/admin/grants/">
                                <span class="icon">
                                    <i class="fas fa-list"></i>
                                </span>
                                <span>All Grants</span>
                            </a>
                            <a class="navbar-item" href="/admin/token-grants">
                                <span class="icon">
                                    <i class="fas fa-coins"></i>
                                </span>
                                <span>Token Grants</span>
                            </a>
                            <a class="navbar-item" href="/import/openbadge" style="display: none;">
                                <span class="icon">
                                    <i class="fas fa-file-import"></i>
                                </span>
                                <span>Import OpenBadge Grant</span>
                            </a>
                        </div>
                    </div>
                }

                @if (CurrentUser.IsAdmin())
                {
                    <div class="navbar-item has-dropdown is-hoverable">
                        <a class="navbar-link">
                            <span class="icon">
                                <i class="fas fa-cog"></i>
                            </span>
                            <span>Settings</span>
                        </a>
                        <div class="navbar-dropdown">
                            
                                <a class="navbar-item" href="/admin/settings/general">
                                    <span class="icon">
                                        <i class="fas fa-sliders-h"></i>
                                    </span>
                                    <span>General</span>
                                </a>
                                <a class="navbar-item" href="/admin/settings/content">
                                    <span class="icon">
                                        <i class="fas fa-edit"></i>
                                    </span>
                                    <span>Content Management</span>
                                </a>
                                <a class="navbar-item" href="/admin/settings/database">
                                    <span class="icon">
                                        <i class="fas fa-database"></i>
                                    </span>
                                    <span>Database</span>
                                </a>
                                <a class="navbar-item" href="/admin/jobs">
                                    <span class="icon">
                                        <i class="fas fa-tasks"></i>
                                    </span>
                                    <span>Job Queue</span>
                                </a>
                                <a class="navbar-item" href="/admin/settings/themes">
                                    <span class="icon">
                                        <i class="fas fa-palette"></i>
                                    </span>
                                    <span>Themes</span>
                                </a>
                                <a class="navbar-item" href="/admin/users">
                                    <span class="icon">
                                        <i class="fas fa-users"></i>
                                    </span>
                                    <span>User Management</span>
                                </a>
                                <a class="navbar-item" href="/admin/servers">
                                    <span class="icon">
                                        <i class="fas fa-user-plus"></i>
                                    </span>
                                    <span>Federation Discovery</span>
                                </a>
                                <a class="navbar-item" href="/admin/development" style="color: #ababab;">
                                    <span class="icon">
                                        <i class="fas fa-code"></i>
                                    </span>
                                    <span>Development Tools</span>
                                    <span class="tag is-warning is-small" style="margin-left: 0.5rem;">DEV</span>
                                </a>
                            }
                            <a class="navbar-item" href="/admin/settings/profile" style="display: none">
                                <span class="icon">
                                    <i class="fas fa-user-circle"></i>
                                </span>
                                <span>Profile</span>
                            </a>
                            <a class="navbar-item" href="/admin/settings/federation" style="display: none">
                                <span class="icon">
                                    <i class="fas fa-network-wired"></i>
                                </span>
                                <span>Federation</span>
                            </a>
                            <a class="navbar-item" href="/admin/settings/notifications" style="display: none">
                                <span class="icon">
                                    <i class="fas fa-bell"></i>
                                </span>
                                <span>Notifications</span>
                            </a>
                        </div>
                    </div>
                }
            </div>
            

            <div class="navbar-end">
                <div class="navbar-item">
                    <div class="buttons">
                        <Logout />
                    </div>
                </div>
            </div>
        </div>
    </div>
</nav>

@code {
    private bool isMenuActive = false;

    private void ToggleMenu()
    {
        isMenuActive = !isMenuActive;
    }
}
