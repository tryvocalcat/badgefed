@inherits LayoutComponentBase

<style>
    .navbar {
        background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
        min-height: 4.5rem;
    }
    .navbar-item {
        color: rgba(255, 255, 255, 0.9);
        transition: all 0.2s ease;
    }
    .navbar-item:hover {
        color: white;
        background-color: rgba(255, 255, 255, 0.1);
    }
    .navbar-brand .navbar-item {
        font-size: 1.25rem;
        font-weight: 600;
    }
    .navbar-burger {
        color: white;
    }
    .navbar-burger:hover {
        background-color: rgba(255, 255, 255, 0.1);
    }
    .footer {
        background-color: #f8f9fa;
        padding: 3rem 1.5rem;
    }
    .footer-links {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-bottom: 1rem;
    }
    .footer-links a {
        color: #4a4a4a;
        transition: color 0.2s ease;
    }
    .footer-links a:hover {
        color: #4f46e5;
    }
    .footer-text {
        color: #6b7280;
        font-size: 0.875rem;
    }
</style>

<nav class="navbar is-dark is-spaced">
    <div class="container">
        <div class="navbar-brand">
            <a class="navbar-item navbar-logo" href="/">
                <Logo />
            </a>

            <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navMenu" @onclick="ToggleMenu">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>
        
        <div id="navMenu" class="navbar-menu @(isMenuActive ? "is-active" : "")">
            <div class="navbar-start">
                <a class="navbar-item" href="/">
                    <span class="icon">
                        <i class="fas fa-home"></i>
                    </span>
                    <span>Home</span>
                </a>
                <a class="navbar-item" href="/explore">
                    <span class="icon">
                        <i class="fas fa-award"></i>
                    </span>
                    <span>Explore Badges</span>
                </a>
                 <a class="navbar-item" href="/search">
                    <span class="icon">
                        <i class="fas fa-search"></i>
                    </span>
                    <span>Search Grants</span>
                </a>
                <a class="navbar-item" href="https://badgefed.vocalcat.com/" target="_blank">
                    <span class="icon">
                        <i class="fas fa-book"></i>
                    </span>
                    <span>Documentation</span>
                </a>
            </div>
            <div class="navbar-end" style="display: none;">
                <div class="navbar-item">
                    <div class="buttons">
                        <a class="button is-light" href="/">
                            <span class="icon">
                                <i class="fas fa-lock"></i>
                            </span>
                            <span>Admin Panel</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</nav>

<main class="section">
    <div class="container">
        @Body
    </div>
</main>

<footer class="footer">
    <div class="container">
        <div class="footer-links">
            <a href="https://www.vocalcat.com" target="_blank">
                <span class="icon">
                    <i class="fas fa-globe"></i>
                </span>
                <span>VocalCat</span>
            </a>
            <a href="https://github.com/tryvocalcat/activitypub-badges" target="_blank">
                <span class="icon">
                    <i class="fab fa-github"></i>
                </span>
                <span>Source Code</span>
            </a>
            <a href="https://badgefed.vocalcat.com/" target="_blank">
                <span class="icon">
                    <i class="fas fa-book"></i>
                </span>
                <span>Documentation</span>
            </a>
        </div>
        <p class="footer-text">
            BadgeFed is an open-source project built on ActivityPub for decentralized badge management
        </p>
    </div>
</footer>

@code {
    private bool isMenuActive = false;

    private void ToggleMenu()
    {
        isMenuActive = !isMenuActive;
    }
}
