@page "/admin/settings"

@inject NavigationManager NavigationManager
@rendermode InteractiveServer

@layout BadgeFed.Components.Layouts.AdminLayout

@attribute [Authorize(Roles = "admin")]

<div class="container">
    <nav class="breadcrumb" aria-label="breadcrumbs">
        <ul>
            <li><a href="/admin">Dashboard</a></li>
            <li class="is-active"><a href="#" aria-current="page">Settings</a></li>
        </ul>
    </nav>

    <h1 class="title">System Settings</h1>
    <p class="subtitle">Manage your BadgeFed instance settings</p>

    <div class="columns is-multiline">
        <!-- General Settings -->
        <div class="column is-4">
            <div class="box has-shadow">
                <h3 class="title is-4">General Settings</h3>
                <p class="mb-4">Customize your application appearance and behavior</p>
                <a href="/admin/settings/general" class="button is-primary is-fullwidth">
                    <span class="icon"><i class="fas fa-sliders-h"></i></span>
                    <span>Manage General Settings</span>
                </a>
            </div>
        </div>

        <!-- Instance Description -->
        <div class="column is-4">
            <div class="box has-shadow">
                <h3 class="title is-4">Instance Description</h3>
                <p class="mb-4">Customize your instance information displayed to users</p>
                <a href="/settings/instance" class="button is-primary is-fullwidth">
                    <span class="icon"><i class="fas fa-home"></i></span>
                    <span>Manage Instance Description</span>
                </a>
            </div>
        </div>

        <!-- Database Management -->
        <div class="column is-4">
            <div class="box has-shadow">
                <h3 class="title is-4">Database Management</h3>
                <p class="mb-4">Manage database settings and perform maintenance tasks</p>
                <a href="/admin/settings/database" class="button is-primary is-fullwidth">
                    <span class="icon"><i class="fas fa-database"></i></span>
                    <span>Manage Database</span>
                </a>
            </div>
        </div>

        <!-- Themes -->
        <div class="column is-4">
            <div class="box has-shadow">
                <h3 class="title is-4">Themes</h3>
                <p class="mb-4">Customize themes and visual appearance</p>
                <a href="/admin/settings/themes" class="button is-primary is-fullwidth">
                    <span class="icon"><i class="fas fa-palette"></i></span>
                    <span>Manage Themes</span>
                </a>
            </div>
        </div>

        <!-- User Invitations -->
        <div class="column is-4">
            <div class="box has-shadow">
                <h3 class="title is-4">User Invitations</h3>
                <p class="mb-4">Manage user invitations and access control</p>
                <a href="/admin/invitations" class="button is-primary is-fullwidth">
                    <span class="icon"><i class="fas fa-user-plus"></i></span>
                    <span>Manage Invitations</span>
                </a>
            </div>
        </div>
    </div>
</div>

@code {
    // No additional code needed for this page
}
